{
  "name": "rag-engine",
  "version": "1.0.0",
  "description": "RAG UI Engine - A template-driven retrieval-augmented generation interface engine",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:modern": "NEXT_PUBLIC_TEMPLATE_ID=modern next dev NODE_ENV=development",
    "dev:legal": "NEXT_PUBLIC_TEMPLATE_ID=legal next dev",
    "build": "next build",
    "build:modern": "NEXT_PUBLIC_TEMPLATE_ID=modern next build && mv .next dist/modern",
    "build:legal": "NEXT_PUBLIC_TEMPLATE_ID=legal next build && mv .next dist/legal",
    "build:all": "npm run build:modern && npm run build:legal",
    "start": "next start",
    "start:modern": "NEXT_PUBLIC_TEMPLATE_ID=modern next start",
    "start:dev:modern": "NEXT_PUBLIC_TEMPLATE_ID=modern next start NODE_ENV=development",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "zustand": "^4.4.0",
    "@tanstack/react-query": "^5.28.0",
    "tailwindcss": "^3.4.0",
    "@heroicons/react": "^2.0.18"
  },
  "devDependencies": {
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "typescript": "5.9.3",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "archiver": "^6.0.1",
    "tsx": "^4.7.0"
  },
  "optionalDependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-tabs": "^1.0.4"
  }
}
